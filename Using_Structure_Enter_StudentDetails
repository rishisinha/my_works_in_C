Enter Student details and save the file

#include <stdio.h>
struct student
{
char name[50];
int roll;
float marks;
} s[100];

int main()
{
int i,n, g=1;
struct student s[100];

printf("Enter total of students:\n");
scanf("%d",&n);

for(i=0;i<n;i++)
{
printf("\n Enter information of student %d:\n",i+1);
printf("Enter name: ");
scanf("%s", s[i].name);

//if((name[i]==name[j]) && (i!=j))


printf("Enter roll number: ");
scanf("%d", &s[i].roll);

printf("Enter marks: ");
scanf("%f", &s[i].marks);
}

printf("Displaying Information:\n");
for(i=0;i<n;i++)
{
printf("\n %d no. student info\n",i+1);
printf("\tName:%s\n ",s[i].name);
printf("\t Roll number: %d\n",s[i].roll);

printf("\t Marks: %.1f\n\n",s[i].marks);

}
FILE *fp;
    fp = fopen("Student.dat","w");
    int p=0;
   for(p=0; p<4; p++)
   {

            fwrite(&s[i],sizeof(s[i]),1,fp);
    }
printf("\nRecord has been added successfullyâ€¦!!");
    fclose(fp);
    getch();

return 0;
}
